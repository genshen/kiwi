{
  "name": "kiwi",
  "version": "1.0.0",
  "description": "A framework for parallel.",
  "author": "genshen <genshenchu@gmail.com>",
  "commands": {
    "debug": "cmake ../",
    "release": "cmake ../",
    "test": "cmake ../"
  },
  "compilers": {
    "cc": "clang",
    "cxx": "clang++"
  },
  "packages": {
    "git": {
      "googletest": {
        "path": "https://github.com/google/googletest.git",
        "tag": "release-1.8.0"
      }
    },
    "files": {
      "catch2": {
        "path": "https://github.com/catchorg/Catch2/releases/download/v2.1.2",
        "files": {
          "catch.hpp": "catch2.hpp"
        },
        "build": [
          "CP catch2.hpp {INCLUDE}"
        ]
      },
      "cpptoml": {
        "path": "https://raw.githubusercontent.com/skystrife/cpptoml/master/include",
        "files": {
          "cpptoml.h": "toml.hpp"
        },
        "build": [
          "CP toml.hpp {INCLUDE}"
        ]
      }
    }
  }
}
